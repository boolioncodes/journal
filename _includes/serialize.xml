{%- assign this=include.var -%}
{%- if this.first -%} 
  {% assign zeroeth = this[0] -%}
  {%- if this.first != zeroeth -%}
    {%- for hash in this -%}
      {%- assign val = hash[1] %}
      <node key="{{ hash[0] }}">
        {% include serialize.xml var=val %}
      </node>
    {%- endfor -%}
  {%- else -%}
    <node>
    {%- for item in this -%}
      {% include serialize.xml var=item %}
    {%- endfor -%}
    </node>
  {%- endif %}
{%- else %}
  <text>
    {{ this }}
  </text>
{% endif -%}

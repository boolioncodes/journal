{%- assign this=include.var -%}
{%- if this.first -%} 
  {%- assign thisLen = this | size -%}
  {%- assign firstLen = this.first | size -%}
  {%- if !this.first.first.first and firstLen==2 and thisLen==1 -%}
      {%- assign key = this.first.first -%}
      {%- assign val = this.first.last -%}
    <node key="{{ key }}">
      {% include serialize.xml var=val %}
    </node>
  {%- else -%}
    <node>
    {%- for i in this -%}
      {% include serialize.xml var=i %}
    {%- endfor -%}
    </node>
  {%- endif %}
{%- else %}
  <node type="text">
    {{ this }}
  </node>
{% endif -%}
